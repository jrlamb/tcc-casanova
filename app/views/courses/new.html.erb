  <div class="row">
  	<div class="col-md-12">
      <%= form_for(:course, :url => university_campu_department_courses_path(params[:university_id], params[:campu_id], params[:department_id]), html: {class: "form-horizontal", role: "form"}) do |f| %>
      <% if @course.errors.any? %>
      <div class="alert alert-danger">
        <a class="close" data-dismiss="alert">&#215;</a>
        <ul>
          <% @course.errors.full_messages.each do |msg| %>
          <%= content_tag :li, msg, :id => "error_#{msg}" if msg.is_a?(String) %>
          <% end %>
        </ul>
      </div>
      <% end %>
       <fieldset>
        <legend>Novo Curso</legend>

        <%= render 'form', :f => f %>

      </fieldset>
      <% end %>
    </div>
  </div>

