<div class="form-group">
  <label class="col-sm-2 control-label" for="textinput">Nome</label>
  <div class="col-sm-10">
    <%= f.text_field :name, placeholder: "Informe o Nome", class: "form-control" %>
  </div>
</div>

<div class="form-group">
  <label class="col-sm-2 control-label" for="textinput">Telefone</label>
  <div class="col-sm-10">
    <%= f.text_field :phone, placeholder: "Informe o Telefone", class: "form-control" %>
  </div>
</div>

<div class="form-group">
  <label class="col-sm-2 control-label" for="textinput">Curso</label>
  <div class="col-sm-10">
    <%= f.select :course_id, @courses.collect {|p| [p.name, p.id]}, { prompt: "Selecione o Curso"} , class: "form-control" %>
  </div>
</div>

<div class="form-group">
  <div class="col-sm-offset-2 col-sm-10">
    <div class="pull-right">
      <%= link_to("Cancelar", departments_path, title: "Cancelar", class: "btn btn-default") %>
     <%= f.submit("Salvar", class: "btn btn-primary") %>
    </div>
  </div>
</div>

