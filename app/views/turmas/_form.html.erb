<div class="form-group">
  <label class="col-sm-2 control-label" for="textinput">Nome</label>
  <div class="col-sm-10">
    <%= f.text_field :name, placeholder: "Informe o Nome", class: "form-control" %>
  </div>
</div>

<div class="form-group">
  <label class="col-sm-2 control-label" for="textinput">Periodo</label>
  <div class="col-sm-10">
    <%= f.text_field :period, placeholder: "Informe o Periodo", class: "form-control" %>
  </div>
</div>

<div class="form-group">
  <label class="col-sm-2 control-label" for="textinput">Disciplinas</label>
  <div class="col-sm-10">
    <%= f.collection_check_boxes(:discipline_ids, @disciplines, :id, :name) do |b| %>
      <div class="row">
        <%= b.label(class: "check_box") do %>
            <%= b.check_box(class: "check_box") %>
            <%= b.object.name %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>



<div class="form-group">
  <div class="col-sm-offset-2 col-sm-10">
    <div class="pull-right">
      <%= link_to("Cancelar", turmas_path, title: "Cancelar", class: "btn btn-default") %>
     <%= f.submit("Salvar", class: "btn btn-primary") %>
    </div>
  </div>
</div>

