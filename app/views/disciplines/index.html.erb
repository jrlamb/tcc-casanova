<ol class="breadcrumb">
  <li><%= link_to "Home", root_path, title: "PÃ¡gina Inicial" %></li>
  <li><%= link_to(@course.department.campu.university.name, universities_path, title: "Listar Universidade") %></li>
  <li><%= link_to(@course.department.campu.name, university_campus_path(@course.department.campu.university), title: "Listar Campus") %></li>
