<div class="form-group">
  <label class="col-sm-2 control-label" for="textinput">Nome</label>
  <div class="col-sm-10">
    <%= f.text_field :name, placeholder: "Informe o Nome", class: "form-control" %>
  </div>
</div>

<div class="form-group">
  <label class="col-sm-2 control-label" for="textinput">Periodo</label>
  <div class="col-sm-10">
    <%= f.text_field :period, placeholder: "Informe o Periodo", class: "form-control" %>
  </div>
</div>

<div class="form-group">
  <label class="col-sm-2 control-label" for="textinput">Carga Horária</label>
  <div class="col-sm-10">
    <%= f.text_field :loadHourly, placeholder: "Informe a Carga Horária", class: "form-control" %>
  </div>
</div>


<div class="form-group">
  <label class="col-sm-2 control-label" for="textinput">Matriz</label>
  <div class="col-sm-10">
    <%= f.text_field :matrix, placeholder: "Informe a Matriz", class: "form-control" %>
  </div>
</div>

<div class="form-group">
  <label class="col-sm-2 control-label" for="textinput">Pré-Requisito</label>
  <div class="col-sm-10">
    <%= f.text_field :preRequisite, placeholder: "Informe o Pré-Requisito", class: "form-control" %>
  </div>
</div>

<div class="form-group">
  <label class="col-sm-2 control-label" for="textinput">Professor</label>
  <div class="col-sm-10">
    <%= f.select(:teacher_id, @teachers.all.collect{|p| [p.name, p.id]}, {prompt: "selecione o Professor"}, {class: "form-control"}) %>
  </div>
</div>



<div class="form-group">
  <div class="col-sm-offset-2 col-sm-10">
    <div class="pull-right">
      <%= link_to("Cancelar", university_campu_department_course_disciplines_path, title: "Cancelar", class: "btn btn-default") %>
      <%= f.submit("Salvar", class: "btn btn-primary") %>
    </div>
  </div>
</div>

